{
    "extends": "../../tsconfig.base.json",
    "include": ["./src", "./types", "../../configuration/types"],
    "exclude": ["./lib", "./esm", "./cjs"],
    "compilerOptions": {
        "rootDir": "src",
        "baseUrl": ".",
        "outDir": "lib",
        "declaration": true,
        "declarationMap": true,
        "composite": true,
        "declarationDir": "lib",
        "paths": {
            "@ns-ui/core": ["../ns-ui-core/src"],
            "@ns-ui/hooks": ["../ns-ui-hooks/src"],
            "@ns-ui/tests": ["../ns-ui-tests/src"]
        }
    },
    "references": [
        { "path": "../core" },
        { "path": "../hooks" },
        { "path": "../tests" }
    ]
}
