{
    "extends": "../../tsconfig.base.json",
    "include": ["./src", "./types", "../../configuration/types"],
    "exclude": [
        "./lib",
        "./esm",
        "./cjs",
        "**/*.story.tsx",
        "**/*.test.tsx",
        "**/*.test.ts",
        "**/styles.api.ts",
        "src/components/*/demos/*",
        "src/demos.ts"
    ],
    "compilerOptions": {
        "rootDir": "src",
        "baseUrl": ".",
        "outDir": "lib",
        "declaration": true,
        "declarationMap": true,
        "composite": true,
        "declarationDir": "lib",
        "paths": {
            "@ns-ui/core": ["../@ns-ui/core/src"],
            "@ns-ui/hooks": ["../@ns-ui/hooks/src"],
            "@ns-ui/tests": ["../@ns-ui/tests/src"]
        }
    },
    "references": [
        { "path": "../@ns-ui/core" },
        { "path": "../@ns-ui/hooks" },
        { "path": "../@ns-ui/tests" }
    ]
}
